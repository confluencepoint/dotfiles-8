{
    "codeLens.enable": true,
    "suggest.autoTrigger": "none",
    "suggest.timeout": 5000,
    "suggest.noselect": false,
    "suggest.snippetIndicator": " â–º",
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "coc.source.omni.filetypes": ["clojure"],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
        },
        "metals" :{
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        },
        "haskell": {
            "command": "ghcide",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ]
        }
    }
}
